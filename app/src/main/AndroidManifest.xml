<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studiant.com">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_place_api_key"/>

        <activity
            android:name=".presentation.ui.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.activities.MainActivity" />
        <activity
            android:name=".presentation.ui.activities.ChooseActivity"
            android:label="@string/title_activity_choose" />
        <activity android:name=".presentation.ui.activities.ConnexionActivity" />
        <activity
            android:name=".presentation.ui.activities.ProfilParticulierActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".presentation.ui.activities.AddJobActivity" />
        <activity
            android:name=".presentation.ui.activities.ProfilEtudiantActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".presentation.ui.activities.DashboardEtudiantActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".presentation.ui.activities.DashboardParticulierActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".presentation.ui.activities.ListPostulantActivity"></activity>
    </application>

</manifest>