<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studiant.com">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_place_api_key"/>

        <activity
            android:name=".presentation.ui.activities.common.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".presentation.ui.activities.common.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".presentation.ui.activities.particulier.ChooseActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_choose" />


        <activity android:name=".presentation.ui.activities.common.ConnexionActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".presentation.ui.activities.particulier.ProfilParticulierActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />

        <activity android:name=".presentation.ui.activities.particulier.AddJobActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".presentation.ui.activities.etudiant.ProfilEtudiantActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />

        <activity
            android:name=".presentation.ui.activities.etudiant.DashboardEtudiantActivity"
            android:windowSoftInputMode="stateHidden"></activity>


        <activity
            android:name=".presentation.ui.activities.particulier.DashboardParticulierActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".presentation.ui.activities.particulier.ListPostulantActivity"></activity>


        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>
        <service
            android:name=".notification.MyFirebaseMessagingService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".notification.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>